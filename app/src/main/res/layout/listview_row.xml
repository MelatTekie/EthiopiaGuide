<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageVID"
        android:layout_width="@dimen/wid11"
        android:layout_height="@dimen/ht1"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/breakfast" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labeler"
            android:layout_width="@dimen/wid12"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/wightbak"
            android:text="@string/label"
            android:textAlignment="center"
            android:textColor="@color/changer"
            android:textSize="@dimen/sizerr2"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>