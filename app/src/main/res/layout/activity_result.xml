<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:orientation="vertical"
    tools:context="edu.mnstate.wy5094ho.tekieproject.result"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_row="6"
        android:layout_weight="0.44"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:gravity="center_horizontal"
            android:text="@string/sumer"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sizerr"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/greener"
            android:textSize="@dimen/sizerr2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTest2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="@color/greener"
            android:textSize="@dimen/sizerr2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="@color/greener"
            android:textSize="@dimen/sizerr2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/spinV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9"
            android:gravity="center_horizontal"
            android:text="@string/spiner"
            android:textColor="@color/greener"
            android:textSize="@dimen/sizer1"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spincountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@string/val1"
            android:gravity="center_horizontal" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.29"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thanks"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/wid10"
            android:gravity="center_horizontal"
            android:text="@string/vgg"
            android:textSize="@dimen/sizerr"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvStudents"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ht">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>


